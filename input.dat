import os
import glob
import spinflip
import numpy as np
from spinflip import sf_cas
import psi4

# setting up molecule
n2 = psi4.core.Molecule.create_molecule_from_string("""
0 7
N 0 0 0
N 0 0 2.5
symmetry c1
""")
o2 = psi4.core.Molecule.create_molecule_from_string("""
0 3
O
O 1 1.2
symmetry c1
""")
# set target charge and multiplicity
charge = 0
multiplicity = 5

# running the spin-flip calculation
opts = {'basis': 'cc-pvdz', 'diis_start': 6, 'num_roots': 4, 'reference': 'rohf', 'calc_s_squared': True}
psi4.set_options(opts)
e, scf_wfn = sf_cas( charge, multiplicity, n2, conf_space="p", add_opts=opts, return_rohf_wfn=True)

