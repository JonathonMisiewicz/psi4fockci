import sys, os
import glob
import spinflip
import numpy as np
from spinflip import sf_cas
import psi4

# setting up molecule
n2 = psi4.core.Molecule.create_molecule_from_string("""
0 3
O 0 0 0
O 0 0 2.0
symmetry c1
""")
# set target charge and multiplicity
charge = 0
multiplicity = 1

# running the spin-flip calculation
opts = {'basis': 'sto-3g', 'NUM_ROOTS': 4, 'reference': 'rohf', 'guess': 'gwh', 'scf_type': 'out_of_core'}
psi4.set_options(opts)
e, ci_wfn, scf_wfn = sf_cas( charge, multiplicity, n2, conf_space="S", add_opts=opts, return_rohf_wfn=True, return_ci_wfn=True, write_ci_vects=True)


